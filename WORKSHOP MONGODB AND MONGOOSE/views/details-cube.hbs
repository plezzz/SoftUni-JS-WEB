<main>
    <h1>{{cube.name}}</h1>
    <img class="cube" src="{{cube.imageURL}}" alt="{{cube.name}}">
    <div class="details">
        <p><span>Description:</span> {{cube.description}}</p>
        <p><span>Difficulty level:</span> {{cube.difficultyLevel}}</p>
        <div class="row">
            <a class="btn" href="/">Back</a>
            <a class="btn info" href="/attach-accessory/{{cube._id}}">Attach accessory</a>
        </div>
        <div class="row">
            <a class="btn info" href="/edit-cube/{{cube._id}}">Edit</a>
            <a class="btn danger" href="/delete-cube/{{cube._id}}">Delete</a>
        </div>
    </div>
    <h2>Accessories</h2>
    <div class="accessories">
        {{#if cube.accessories}}
            {{#each cube.accessories}}
                <div class="accessory">
                    <img src="{{imageURL}}" alt="{{name}}">
                    <h3>{{name}}</h3>
                    <a class="btn" href="/details-accessory/{{_id}}">View</a>
                </div>
            {{/each}}
        {{else}}
            <h3 class="italic">This cube has no accessories yet...</h3>
        {{/if}}
    </div>
</main>
