<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Register</h1>
        <div style="padding: 5%;">
            <form  action="/register" method="post">
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp"
                        name="email"   placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for=repeatPassword">Re-Password</label>
                    <input type="password" name="repeatPassword" class="form-control" id=repeatPassword" placeholder="repeatPassword">
                </div>
                <div class="form-group">
                    <p>Already have account? <a href="/login">Login Now!</a></p>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>
