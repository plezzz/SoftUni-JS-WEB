<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Offer Tripp</h1>
        <div style="padding: 5%;">
            <form action="/offer" method="post">
                <div class="form-group">
                    <label for="startEnd">Starting Point - End Point</label>
                    <input type="text" class="form-control" id="startEnd" aria-describedby="emailHelp"
                           placeholder="Studentski grad - Pamporovo" name="startEnd" value="{{obj.startEnd}}">
                </div>
                <div class="form-group">
                    <label for="dateTime">Date - Time</label>
                    <input type="text" class="form-control" name="dateTime" id="dateTime"
                           placeholder="29 December 2019 - 19:00" value="{{obj.dateTime}}">
                </div>
                <div class="form-group">
                    <label for="carImage">Car Image</label>
                    <input type="text" class="form-control" name="carImage" id="carImage" placeholder="https://..."
                           value="{{obj.carImage}}">
                </div>
                <div class="form-group">
                    <label for="seats">Seats</label>
                    <input min="1" max="6" type="number" name="seats" class="form-control" id="seats" placeholder="4..."
                           value="{{obj.seats}}">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" id="description"
                           placeholder="Price, Car information..." name="description" value="{{obj.description}}">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>
