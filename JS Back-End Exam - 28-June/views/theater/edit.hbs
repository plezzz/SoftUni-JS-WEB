<form class="theater-form" action="/trip/edit/{{_id}}" method="post">
    <h1>Edit Theater</h1>
    <div>
        <label for="title">Theater Title:</label>
        <input type="text" id="title" name="title" placeholder="Theater name" value="{{title}}">
    </div>
    <div>
        <label for="description">Theater Description:</label>
        <textarea id="description" name="description" placeholder="Description" >{{description}}</textarea>
    </div>
    <div>
        <label for="imageURL">Image URL:</label>
        <input id="imageURL" name="imageURL" type="text" placeholder="Image URL" value="{{imageURL}}">
    </div>
    <div class="check">
        <input type="checkbox" name="checkbox" id="checkbox" {{#if isPublic}}checked{{/if}}  >
        <label for="checkbox">Public</label>
    </div>
    <button class="btn" type="submit">Submit</button>
</form>
