{{>info}}
<section>
    <div class="aux">
        <h1>Available Plays</h1>
        <div class="home-buttons">
            <a class="btn create-trip" href="/create">Create Theater</a>
            <a class="btn create-trip" href="/home?search=createdAt">Sort by Date</a>
            <a class="btn create-trip" href="/home/?search=likes">Sort by Likes</a>
        </div>
    </div>
    <div class="theaters-container">
        {{#if plays}}
            {{#each plays}}
                <div>
                    <div class="home-image">
                        <img src="{{imageURL}}"
                             alt="Card image cap">
                    </div>
                    <div class="info">
                        <h4>{{title}}</h4>
                        <div class="info-buttons">
                            <a class="btn details" href="/details/{{_id}}">Details</a>
                            <span class="likes">{{likes}} likes</span>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <h4>No plays yet...</h4>
        {{/if}}
    </div>
</section>
